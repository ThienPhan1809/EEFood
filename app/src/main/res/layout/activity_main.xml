<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/img_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_backgroud"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/txt_name"
        android:layout_width="300dp"
        android:layout_height="89dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="EXPRESS"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        android:textStyle="bold"
        android:transitionName="logo_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_backgroud"
        app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/txt_name2"
        android:layout_width="336dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="E-FOOD"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        android:textStyle="bold"
        android:transitionName="logo_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_name"
        app:layout_constraintVertical_bias="0.133" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="169dp"
        android:layout_height="341dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/logo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_firework"
        android:layout_width="500dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name2"
        app:layout_constraintVertical_bias="0.038"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/firework" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_delivery"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name2"
        app:layout_constraintVertical_bias="0.733"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/delivery" />




</androidx.constraintlayout.widget.ConstraintLayout>